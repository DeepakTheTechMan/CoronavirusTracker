<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/categoryCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.haipq.android.flagkit.FlagImageView
                    android:id="@+id/img_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|right"
                    app:countryCode="US"
                    tools:src="@drawable/flag_us" />

                <Button
                    android:id="@+id/btnmore"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:drawablePadding="10dp"
                    android:background="@drawable/btn_bk"
                    android:drawableRight="@drawable/ic_right"
                    android:text="MORE"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_bk"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/acme"
                android:maxLines="2"
                android:layout_gravity="center_vertical"
                android:text="Country"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <!--<ImageView
                    android:id="@+id/img_timeline"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/ic_total_case"
                    tools:ignore="VectorDrawableCompat" />-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/cases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/acme"
                    android:drawableLeft="@drawable/ic_total_case"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="TOTAL CASES"
                    android:textColor="@color/gradient_start_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/caseValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/acme"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/btn_bk"
                    android:textColor="@color/white"
                    android:text="N/A"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right">

                    <!--<ImageView
                        android:id="@+id/img_verified_recovered"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_recover"
                        tools:ignore="VectorDrawableCompat" />-->

                    <TextView
                        android:id="@+id/recoveredlabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/acme"
                        android:text="TOTAL RECOVER"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/ic_recover"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/gradient_start_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/recovered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/acme"
                        android:text="N/A"
                        android:textStyle="bold"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/btn_bk"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left">

                <!--<ImageView
                    android:id="@+id/img_user"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/ic_total_death"
                    tools:ignore="VectorDrawableCompat" />-->

                <TextView
                    android:id="@+id/deathslabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/acme"
                    android:text="TOTAL DEATHS"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_total_death"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/gradient_start_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/deaths"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/acme"
                    android:layout_marginLeft="25dp"
                    android:text="N/A"
                    android:textStyle="bold"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/btn_bk"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right">

                    <!--<ImageView
                        android:id="@+id/img_critical"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_critical"
                        tools:ignore="VectorDrawableCompat" />-->

                    <TextView
                        android:id="@+id/criticallabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/acme"
                        android:text="TOTAL CRITICAL"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/ic_critical"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/gradient_start_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/critical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/acme"
                        android:text="N/A"
                        android:textStyle="bold"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/btn_bk"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
